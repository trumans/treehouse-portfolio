extends layout.pug

block content
  include includes/back_home.pug
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1.app-name #{project.project_name}
        p.lead.text-light #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        //- Technologies used in each project.
        h6 Technologies
        ul
          each technology in project.technologies
            li #{technology}

        // - GitHub links
        a.button.expanded(href=`${project.live_link}`, target='_blank') Live Demo
        a.button.expanded(href=`${project.github_link}`, target='_blank') GitHub Repo

    //- Screenshots from app
    each image in project.image_urls
      img.image(src=`/static/img/${project.id}/${image}`)

  include includes/back_home.pug
