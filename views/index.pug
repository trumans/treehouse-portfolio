extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1.my-name Truman Smith

      //- Description for your portfolio, what this project is, it's purpose, what it's suppossed to accomplish, etc.
      p.lead.text-light
        | Some of my Treehouse projects.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- Dynamically generate the routes in the href, img's src and the projects title.
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/img/${project.id}/index_image.jpg`)
            h5.app-name= project.project_name
